<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecord">

    <LinearLayout
        android:id="@+id/addRecodeHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/recodeheader"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/back"
            android:layout_margin="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Add New Record"
            android:textColor="@android:color/white"
            android:textSize="45sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:id="@+id/topicAddRecode"
        android:layout_below="@+id/addRecodeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Add a new Recode"
        android:layout_marginTop="60dp"
        android:textSize="25sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/topicAddRecode"
        android:padding="25dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/recode1tag"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/regHeader"
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:padding="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="1. Name"
                android:layout_marginLeft="2dp"
                android:textSize="25dp" />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/recode2tag"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/recode1tag"
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:padding="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="2. Phone Number"
                android:layout_marginLeft="2dp"
                android:textSize="25dp" />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:hint="Phone Number"
                android:inputType="phone"/>
        </LinearLayout>

        <!-- Add you want fields-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/Primarygreen"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Cancel"
                android:textSize="18sp"
                android:layout_margin="15dp"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/Primarygreen"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Submit"
                android:textSize="18sp"
                android:layout_margin="15dp"/>

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:background="@drawable/ceerclebackgroundgreen"
        android:src="@drawable/ic_assignment_black_24dp"
        android:padding="25dp"/>

</RelativeLayout>