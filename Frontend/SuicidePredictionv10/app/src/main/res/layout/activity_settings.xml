<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <LinearLayout
        android:id="@+id/regHeader"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/header"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nametag"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/regHeader"
        android:layout_marginTop="25dp"
        android:weightSum="2"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="Name"
            android:layout_marginLeft="2dp"
            android:textSize="25dp" />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:hint="Full Name"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dobtag"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/nametag"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:padding="2dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="DOB"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/picDates"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_date_range_black_24dp"
                android:clickable="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/dateViews"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Your Birthday"
            android:textSize="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/phonetag"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/dobtag"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="Phone Number"
            android:layout_marginLeft="2dp"
            android:textSize="25dp" />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:hint="Phone Number"
            android:inputType="phone"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hospitaltag"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/phonetag"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="Current Hospitall"
            android:layout_marginLeft="2dp"
            android:textSize="25dp" />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:hint="Hospital Name"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lictag"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/hospitaltag"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:padding="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="Doctor License"
            android:layout_marginLeft="2dp"
            android:textSize="25dp" />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:hint="License ID"
            android:inputType="text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lictag"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/Accent"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Update Profile"
            android:textSize="18sp"
            android:layout_margin="15dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/Accent"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Delete Profile"
            android:textSize="18sp"
            android:layout_margin="15dp"/>

    </LinearLayout>



</RelativeLayout>