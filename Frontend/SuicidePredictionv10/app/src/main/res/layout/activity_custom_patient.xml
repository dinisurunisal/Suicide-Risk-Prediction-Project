<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllPatients">

    <LinearLayout
        android:id="@+id/patientHead"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/header"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Custom Patient"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/patientHead"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <!--Add here to Recylcer View-->
        <Button
            android:id="@+id/recode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recode 1"/>
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addRecords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add_black_24dp"
            app:backgroundTint="@color/darkPrimary"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>