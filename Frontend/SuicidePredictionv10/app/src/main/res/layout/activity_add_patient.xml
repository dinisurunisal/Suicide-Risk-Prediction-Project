<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPatient">

    <LinearLayout
        android:id="@+id/addPatientsHeader"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/addpatientheader"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/back"
            android:layout_margin="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Add New Patient"
            android:textColor="@android:color/white"
            android:textSize="45sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:id="@+id/topicAddPatient"
        android:layout_below="@+id/addPatientsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Add a new patient"
        android:layout_marginTop="60dp"
        android:textSize="25sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/topicAddPatient"
        android:padding="25dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Patient NIC :"
            android:layout_margin="10dp"
            android:textSize="20sp"/>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Enter NIC Number"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/Primarypink"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Cancel"
                android:textSize="18sp"
                android:layout_margin="15dp"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/Primarypink"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Submit"
                android:textSize="18sp"
                android:layout_margin="15dp"/>

        </LinearLayout>
        <Button
            android:id="@+id/showall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/materialPink"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Show All Patients"
            android:textSize="18sp"
            android:layout_margin="15dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:background="@drawable/ceerclebackgroundpink"
        android:src="@drawable/ic_person_add_black_24dp"
        android:padding="25dp"/>

</RelativeLayout>